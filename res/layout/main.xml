<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Input Nilai:"/>
    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@id/label"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:numeric="decimal"
        android:text=""/>
       <TextView
        android:id="@+id/nilaidari"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:layout_below="@id/input"
        android:text="@string/nilaidari"/>
    <Spinner 
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nilaidari"
        android:layout_alignParentRight="true"
        android:prompt="@string/nilaidari"/>
     <TextView
        android:id="@+id/nilaike"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_below="@id/spinner"
        android:text="@string/nilaike"/>
    <Spinner 
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nilaike"
        android:layout_alignParentRight="true"
        android:prompt="@string/nilaike"/>
      <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:textSize="15pt"
        android:layout_alignParentRight="true"
        android:layout_below="@id/spinner1"
        android:text="0.0"/>
        <TextView
         android:id="@+id/date"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70px"/>
        
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_weight="5">
    
    <Button
     	android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Keluar" />
    
     <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:text="OK" />
     
      </LinearLayout>
</RelativeLayout>